<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/game"
    app:columnCount="2"
    app:orientation="horizontal"
    app:rowCount="2"
    tools:context=".GameActivity">

    <fragment
        android:id="@+id/fragment_players"
        android:name="es.ulpgc.eii.android.project2.fragment.PlayersFragment"
        app:layout_column="0"
        app:layout_columnSpan="2"
        app:layout_gravity="fill_horizontal"
        app:layout_row="0"
        app:layout_rowWeight="0.2"
        tools:layout="@layout/fragment_players" />

    <fragment
        android:id="@+id/fragment_panel"
        android:name="es.ulpgc.eii.android.project2.fragment.PanelFragment"
        android:gravity="center"
        app:layout_column="0"
        app:layout_columnWeight="0.5"
        app:layout_gravity="bottom"
        app:layout_row="1"
        app:layout_rowWeight="0.8"
        tools:layout="@layout/fragment_panel" />

    <fragment
        android:id="@+id/fragment_die"
        android:name="es.ulpgc.eii.android.project2.fragment.DieFragment"
        app:layout_column="1"
        app:layout_columnWeight="0.5"
        app:layout_gravity="bottom"
        app:layout_row="1"
        tools:layout="@layout/fragment_die" />

</android.support.v7.widget.GridLayout>
