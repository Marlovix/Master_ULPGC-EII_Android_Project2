<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="2"
    app:rowCount="4"
    tools:context=".ui.fragment.PanelFragment">

    <TextView
        android:id="@+id/textView_player_turn"
        app:layout_rowWeight="0.25"
        app:layout_columnSpan="2"
        style="@style/game_state"
        app:layout_row="0"
        app:layout_column="0" />

    <TextView
        android:id="@+id/textView_accumulated"
        style="@style/game_state"
        app:layout_rowWeight="0.25"
        app:layout_columnSpan="2"
        android:text="@string/label_accumulated"
        app:layout_row="1"
        app:layout_column="0" />

    <TextView
        android:id="@+id/textView_start_turn"
        style="@style/game_state"
        app:layout_columnSpan="2"
        app:layout_rowWeight="0.25"
        app:layout_gravity="fill_vertical"
        android:text="@string/label_start_turn"
        app:layout_row="2"
        app:layout_column="0" />

    <Button
        android:id="@+id/button_throw"
        app:layout_rowWeight="0.25"
        app:layout_gravity="bottom|start"
        android:text="@string/label_throw"
        app:layout_row="3"
        android:textColor="@color/human_buttons"
        android:background="@android:color/transparent"
        app:layout_column="0" />

    <Button
        android:id="@+id/button_collect"
        app:layout_gravity="bottom|end"
        android:text="@string/label_collect"
        app:layout_row="3"
        android:textColor="@color/human_buttons"
        android:background="@android:color/transparent"
        app:layout_column="1" />

</android.support.v7.widget.GridLayout>
