<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/fragments"
    app:orientation="horizontal"
    app:columnCount="2"
    app:rowCount="4"
    tools:context=".fragment.PlayersFragment">

    <TextView
        android:id="@+id/textView_player1"
        app:layout_gravity="fill" />

    <TextView
        android:id="@+id/textView_player1_score"
        app:layout_gravity="end"/>

    <ProgressBar
        android:id="@+id/progress_score_player1"
        app:layout_columnSpan="2"
        style="@style/progress"
        android:progress="100" />

    <TextView
        android:id="@+id/textView_player2"
        app:layout_gravity="start" />

    <TextView
        android:id="@+id/textView_player2_score"
        app:layout_gravity="end" />

    <ProgressBar
        android:id="@+id/progress_score_player2"
        style="@style/progress"
        app:layout_columnSpan="2"
        android:progress="100" />

</android.support.v7.widget.GridLayout>