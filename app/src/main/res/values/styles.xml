<resources>

    <!--<style name="NoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>-->

    <style name="game">
        <item name="android:layout_margin">@dimen/margin_game</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:weightSum">1</item>
    </style>

    <style name="die_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="players">
        <item name="android:textSize">@dimen/size_font_players</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="progress" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="app:layout_columnSpan">2</item>-->
    </style>

    <style name="game_state">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <!--<item name="app:layout_columnSpan">2</item>-->
        <item name="android:textSize">@dimen/size_font_game_state_and_buttons</item>
    </style>

    <style name="buttons" parent="@android:style/Widget.Button">
        <item name="android:layout_margin">@dimen/margin_button</item>
        <item name="android:layout_width">@dimen/width_button</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_font_game_state_and_buttons</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/human_buttons</item>
        <item name="android:background">@drawable/button</item>
    </style>

</resources>
