<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NoActionBar" tools:targetApi="11" parent="@android:style/Theme.Holo.Light">
        <item tools:targetApi="11" name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="game">
        <item name="android:layout_margin">@dimen/margin_game</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:weightSum">1</item>
    </style>

    <style name="die_image">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.3</item>
    </style>

    <style name="players">
        <item name="android:textSize">@dimen/size_font_players</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="players_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="players_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.15</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="progress" tools:targetApi="11" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="game_state">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_font_game_state_and_buttons</item>
    </style>

    <style name="game_state_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="buttons" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/size_font_game_state_and_buttons</item>
        <item name="android:layout_width">@dimen/width_button</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/label_button</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="button_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
